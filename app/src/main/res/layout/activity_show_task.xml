<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingTop="20dp"
    tools:context=".ShowTask"
    android:background="@drawable/showtask1">

    <ImageView
        android:id="@+id/taskImage"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/cadre2"
        app:srcCompat="@android:drawable/ic_menu_report_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Add to favoris"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold" />


        <Switch
            android:id="@+id/switchfavoris"
            android:layout_width="97dp"
            android:layout_height="55dp"
            android:showText="false"
            android:textColor="#673AB7"
            android:textOn="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="0"
            tools:text="" />

    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/taskTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Task Title"
        android:layout_weight="1"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/switchDone"
        android:layout_width="97dp"
        android:layout_height="55dp"
        android:showText="false"
        android:textColor="#673AB7"
        android:textOn="Done"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_weight="0"
        tools:text="Done" />

    </LinearLayout>
    <TextView
        android:id="@+id/taskDeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deadline: Task Deadline"
        android:textColor="#353535"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/taskDescription"
        android:layout_width="377dp"
        android:layout_height="296dp"
        android:text="Task Description" />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Task"
        android:textColor="#000"
        android:textSize="18dp"
        android:backgroundTint="#F7EEDD"
        android:id="@+id/deleteBtn"/>


</LinearLayout>